{
  "name": "@team-choco/core",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "lerna bootstrap --force-local",
    "start": "lerna run start --parallel --stream",
    "build": "lerna run build --parallel --include-dependencies --ignore @team-choco/examples-*",
    "build:prod": "lerna run build --parallel --ignore @team-choco/examples-* --ignore @team-choco/*-helpers",
    "build:watch": "lerna run --parallel build:watch --include-dependencies --ignore @team-choco/examples-*",
    "version": "lerna version --no-private",
    "release": "lerna publish from-git --no-private",
    "lint": "eslint . --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-choco/core.git"
  },
  "contributors": [
    "Nick Woodward <nick@salte.io>"
  ],
  "bugs": {
    "url": "https://github.com/team-choco/core/issues"
  },
  "homepage": "https://github.com/team-choco/core#readme",
  "devDependencies": {
    "@types/chance": "^1.1.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^12.0.0",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-tsdoc": "^0.2.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "microbundle": "^0.12.2",
    "remove-lockfiles": "^2.1.3",
    "ts-jest": "^26.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && remove-lockfiles"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "git add --force"
    ]
  }
}
